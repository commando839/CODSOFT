import random
import string 

def generated_password (length):
    lower_character = string.ascii_lowercase
    digit = string.digits 
    upper_case = string.ascii_uppercase
    special_character = string.punctuation
    characters = lower_character + digit + upper_case + special_character 
    generated_password = ''.join(random.choice(characters) for _ in range(length)) 
    return generated_password 

while True:
    print ("Welcome to the Password Generator!") 
    length = int(input("Enter the desired length of the password, which must be 8-20 characters long: "))
    if length >= 8 and length <= 20:
        password = generated_password (length)  
        print ("Generated password is ", password) 
    else:
        print ("Make sure that the desired length of the password is more than 8 and less than 20 characters.")  
